<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/status_line_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/sym_status"
        android:layout_width="0dp"
        android:layout_height="@dimen/bb_keyboard_key_height"
        android:layout_weight="1"
        android:focusable="false"
        android:scaleType="centerInside"
        android:src="@drawable/status_normal" />

    <ImageView
        android:id="@+id/ctrl_status"
        android:layout_width="0dp"
        android:layout_height="@dimen/bb_keyboard_key_height"
        android:layout_weight="1"
        android:focusable="false"
        android:scaleType="centerInside"
        android:src="@drawable/status_normal" />

    <ImageView
        android:id="@+id/alt_status"
        android:layout_width="0dp"
        android:layout_height="@dimen/bb_keyboard_key_height"
        android:layout_weight="1"
        android:focusable="false"
        android:scaleType="centerInside"
        android:src="@drawable/status_normal" />

    <TextView
        android:id="@+id/textView_inputmethodname"
        android:layout_width="0dp"
        android:layout_height="@dimen/bb_keyboard_key_height"
        android:layout_weight="4"
        android:focusable="false"
        android:gravity="center"
        android:text="@string/msg7"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/cap_status"
        android:layout_width="0dp"
        android:layout_height="@dimen/bb_keyboard_key_height"
        android:layout_weight="1"
        android:focusable="false"
        android:scaleType="centerInside"
        android:src="@drawable/status_normal" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/bb_keyboard_key_height"
        android:layout_weight="1"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/imageView_setting"
        android:layout_width="0dp"
        android:layout_height="@dimen/bb_keyboard_key_height"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/setting" />
</LinearLayout>